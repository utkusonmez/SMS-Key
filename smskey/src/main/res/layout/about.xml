<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/background3">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			android:text="@string/copyright"
			android:textSize="10sp"
			style="@style/buttonComment"
			android:layout_marginTop="10sp"
			android:gravity="end"
			android:paddingRight="15sp"/>

		<RelativeLayout
			android:background="@drawable/panel_background"
			android:paddingTop="8sp"
			android:paddingLeft="15sp"
			android:paddingRight="15sp"
			android:paddingBottom="10sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5sp"
			android:layout_marginRight="5sp">

			<TextView
				android:id="@+id/productId"
				android:text="@string/aboutId"
				android:textSize="20sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_marginTop="10sp"
				android:layout_marginLeft="80sp"/>

			<ImageView
				android:id="@+id/logo"
				android:scaleType="fitCenter"
				android:src="@drawable/icon_about"
				android:layout_width="80sp"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_below="@id/productId"
				android:layout_alignStart="@id/productId"/>

			<ImageView
				android:id="@+id/divider"
				android:src="@android:drawable/divider_horizontal_bright"
				android:layout_width="fill_parent"
				android:layout_height="2sp"
				android:scaleType="fitXY"
				android:layout_below="@id/logo"/>

			<TextView
				android:text="@string/aboutDesc"
				android:id="@+id/description"
				android:textSize="12sp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:padding="5sp"
				android:layout_below="@id/divider"/>

			<TextView
				android:text="@string/aboutDesc2"
				android:id="@+id/description2"
				android:textSize="12sp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:padding="5sp"
				android:layout_below="@id/description"/>

			<ImageView
				android:id="@+id/divider2"
				android:src="@android:drawable/divider_horizontal_bright"
				android:layout_width="fill_parent"
				android:layout_height="2sp"
				android:scaleType="fitXY"
				android:layout_below="@id/description2"/>

			<TextView
				tools:text="v2.0"
				android:id="@+id/versionId"
				android:textSize="12sp"
				android:gravity="start"
				android:textColor="#777"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5sp"
				android:layout_below="@id/divider2"/>

			<TextView
				android:id="@+id/url2"
				android:text="@string/aboutUrl2"
				android:textSize="12sp"
				android:gravity="end"
				android:textColor="#777"
				android:clickable="true"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="5sp"
				android:layout_below="@id/divider2"
				android:layout_toRightOf="@id/versionId"
				android:visibility="invisible"/>

		</RelativeLayout>
	</LinearLayout>

</ScrollView>
